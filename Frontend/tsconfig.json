{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],        // ðŸ‘ˆ Add this line
    "baseUrl": ".",                 // ðŸ‘ˆ Enable absolute imports
    "paths": {                      // ðŸ‘ˆ Match your vite.config.ts alias
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
